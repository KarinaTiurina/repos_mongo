<p id="notice"><%= notice %></p>

<h1 id="repository" data-repository-id="<%= @repository._id %>">
  <%= @repository.name %>
</h1>

<hr />

<table id="items">
  <thead>
    <tr>
      <th>Name</th>
      <th>Command</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_scripts.each do |item_script| %>
      <tr>
        <td><%= link_to item_script.name, repository_item_script_path(@repository, item_script) %></td>
        <td><%= item_script.command %></td>
        <td><%= link_to 'Destroy', repository_item_script_path(@repository, item_script), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% @item_files.each do |item_file| %>
      <tr>
        <td><%= link_to item_file.name, repository_item_file_path(@repository, item_file) %></td>
        <td></td>
        <td><%= link_to 'Destroy', repository_item_file_path(@repository, item_file), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<strong><%= link_to 'New file', new_repository_item_file_path(@repository) %></strong> |
<strong><%= link_to 'New script', new_repository_item_script_path(@repository) %></strong>

<br />
<br />

<%= link_to 'Edit', edit_repository_path(@repository) %> |
<%= link_to 'Back', repositories_path %>
